<section id="visual-active-effects" class="visual-active-effects">
  {{#each enabledEffects as |effect|}}
  <div class="effect-item">
    <div class="effect-info">
      <h1 class="effect-info-header">{{effect.label}}</h1>
      <div class="effect-info-details">
        {{#if effect.strings}}
        <div class="effect-intro">{{{vaeParagraphy effect.strings.intro}}}</div>
        {{#if effect.strings.content}}
        <section class="collapsible">
          <header class="collapsible-header">{{effect.strings.header}}</header>
          <div class="collapsible-content">{{{vaeParagraphy effect.strings.content}}}</div>
        </section>
        {{/if}}
        {{/if}}
      </div>
      <hr>
      <div class="effect-tags">
        <div class="effect-tag temporary">
          {{#if effect.isTemporary}}
          {{localize "VISUAL_ACTIVE_EFFECTS.LABELS.TEMPORARY"}} ({{remainingTimeLabel effect}})
          {{else}}
          {{localize "VISUAL_ACTIVE_EFFECTS.LABELS.PASSIVE"}}
          {{/if}}
        </div>
      </div>
    </div>
    <div class="effect-icon" data-effect-id="{{effect._id}}" style="background-image: url({{effect.icon}})">
      {{#if effect.isExpired}}
      <i class="expired badge fa-solid fa-clock"></i>
      {{else if effect.infinite}}
      <i class="unlimited badge fa-solid fa-infinity"></i>
      {{else}}
      <i class="badge fa-solid fa-clock"></i>
      {{/if}}
    </div>
  </div>
  {{/each}}

  {{#if (and enabledEffects.length disabledEffects.length)}}
  <hr>
  {{/if}}

  {{#each disabledEffects as |effect|}}
  <div class="effect-item">
    <div class="effect-info">
      <h1 class="effect-info-header">{{effect.label}}</h1>
      <div class="effect-info-details">
        {{#if effect.strings}}
        <div class="effect-intro">{{{vaeParagraphy effect.strings.intro}}}</div>
        {{#if effect.strings.content}}
        <section class="collapsible">
          <header class="collapsible-header">{{effect.strings.header}}</header>
          <div class="collapsible-content">{{{vaeParagraphy effect.strings.content}}}</div>
        </section>
        {{/if}}
        {{/if}}
      </div>
      <hr>
      <div class="effect-tags">
        <div class="effect-tag temporary">
          {{#if effect.isTemporary}}
          {{localize "VISUAL_ACTIVE_EFFECTS.LABELS.TEMPORARY"}} ({{remainingTimeLabel effect}})
          {{else}}
          {{localize "VISUAL_ACTIVE_EFFECTS.LABELS.PASSIVE"}}
          {{/if}}
        </div>
        <div class="effect-tag disabled">{{localize "VISUAL_ACTIVE_EFFECTS.LABELS.DISABLED"}}</div>
      </div>
    </div>
    <div class="effect-icon disabled" data-effect-id="{{effect._id}}" style="background-image: url({{effect.icon}});">
      {{#if effect.isExpired}}
      <i class="expired badge fa-solid fa-clock"></i>
      {{else if effect.infinite}}
      <i class="unlimited badge fa-solid fa-infinity"></i>
      {{else}}
      <i class="badge fa-solid fa-clock"></i>
      {{/if}}
    </div>
  </div>
  {{/each}}
</section>
